{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["esnext", "dom"],
    "module": "ES2015",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "target": "es5",
    "outDir": "out",
    "plugins": [{
      "name": "@ecchi-js/typescript-plugin"
    }],
    "typeRoots": ["src/*.d.ts"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist"]
}