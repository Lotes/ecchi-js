{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["esnext", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "target": "es5",
    "outDir": "out",
    "plugins": [{
      "name": "@ecchi-js/typescript-plugin"
    }]
  },
  "include": ["src"],
  "exclude": ["dist"]
}