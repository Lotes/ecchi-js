{
  "name": "@ecchi-js/language",
  "description": "Ecchi.js language",
  "version": "0.0.1",
  "type": "module",
  "exports": {
    "./main": {
      "default": "./out/src/generators/main.js",
      "types": "./out/src/generators/main.d.ts"
    },
    "./headless": {
      "default": "./out/src/generators/headless.js",
      "types": "./out/src/generators/headless.js"
    }
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "clean": "rm -rf out",
    "build": "tsc -b tsconfig.src.json",
    "lint": "eslint src --ext ts",
    "langium:generate": "langium generate",
    "langium:watch": "langium generate --watch",
    "vscode:prepublish": "npm run build && npm run lint"
  },
  "dependencies": {
    "@ecchi-js/core": "^0.0.1",
    "langium": "~2.1.0",
    "vscode-languageclient": "~9.0.1",
    "vscode-languageserver": "~9.0.1"
  },
  "devDependencies": {
    "@types/node": "~20.11.17",
    "concurrently": "~8.2.1",
    "langium-cli": "~2.1.0",
    "typescript": "~5.1.6"
  },
  "displayName": "ecchi-js-language"
}
