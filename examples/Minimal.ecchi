interface UserType { 
  id: number;
  name: string;
}

interface ArticleType {
  id: number;
  title: string;
  content: string;
  author: UserType;
}

user of UserType {
  subject Article of ArticleType {
    action read
    action create extends read
    action edit extends read when subject.author.id === user.id
  }
  role NormalUser {
    for Article {
      allow create
      allow archive when subject.author.id == user.id
    }
  }
}