{
  "compilerOptions": {
    "target": "ES2017",
    "module": "Node16",
    "composite": true,
    "lib": ["ESNext"],
    "sourceMap": true,
    "declarationMap": true,
    "declaration": true,
    "outDir": "out",
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "moduleResolution": "Node16",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "**/src/**/*",
    "**/test/**/*"
 ],
 "exclude": [
    "**/lib/**/*",
    "**/out/**/*",
    "**/node_modules/**/*"
 ]
}
